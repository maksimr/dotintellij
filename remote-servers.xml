      <configuration>
        <option name="certificatesPath" value="$USER_HOME$/.docker/machine/machines/intellij" />
        <option name="pathMappings">
          <list>
            <DockerPathMappingImpl>
              <option name="localPath" value="$USER_HOME$/www/jetbrains/youtrack" />
