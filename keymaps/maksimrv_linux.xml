<keymap version="1" name="maksimrv.linux" parent="Default for XWin">
  <action id="ChooseRunConfiguration">
    <keyboard-shortcut first-keystroke="shift alt f10" />
    <keyboard-shortcut first-keystroke="alt comma" second-keystroke="r" />
  </action>
  <action id="FindUsages">
    <keyboard-shortcut first-keystroke="alt f7" />
    <keyboard-shortcut first-keystroke="alt comma" second-keystroke="shift u" />
  </action>
  <action id="FindUsagesInFile">
    <keyboard-shortcut first-keystroke="ctrl f7" />
    <keyboard-shortcut first-keystroke="alt comma" second-keystroke="u" />
  </action>
  <action id="ShowErrorDescription">
    <keyboard-shortcut first-keystroke="ctrl f1" />
    <keyboard-shortcut first-keystroke="alt comma" second-keystroke="comma" />
  </action>
  <action id="Unsplit">
    <keyboard-shortcut first-keystroke="ctrl alt u" />
  </action>
</keymap>